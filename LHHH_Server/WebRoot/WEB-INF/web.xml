<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<display-name></display-name>
	<servlet>
		<servlet-name>AdminLoginServlet</servlet-name>
		<servlet-class>com.wxc.lhhh.servlet.AdminLoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ShServlet</servlet-name>
		<servlet-class>com.wxc.lhhh.servlet.ShServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoffServlet</servlet-name>
		<servlet-class>com.wxc.lhhh.servlet.LogoffServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>TjglyServlet</servlet-name>
		<servlet-class>com.wxc.lhhh.servlet.TjglyServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FhServlet</servlet-name>
		<servlet-class>com.wxc.lhhh.servlet.FhServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>TjLpServlet</servlet-name>
		<servlet-class>com.wxc.lhhh.servlet.TjLpServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditlpServlet</servlet-name>
		<servlet-class>com.wxc.lhhh.servlet.EditlpServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteLpServlet</servlet-name>
		<servlet-class>com.wxc.lhhh.servlet.DeleteLpServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UserServlet</servlet-name>
		<servlet-class>com.wxc.lhhh.servlet.UserServlet</servlet-class>
	</servlet>
  <servlet>
    <servlet-name>ScymServlet</servlet-name>
    <servlet-class>com.wxc.lhhh.servlet.ScymServlet</servlet-class>
  </servlet>

	<servlet-mapping>
		<servlet-name>AdminLoginServlet</servlet-name>
		<url-pattern>/adminLoginServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ShServlet</servlet-name>
		<url-pattern>/shServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoffServlet</servlet-name>
		<url-pattern>/logoffServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TjglyServlet</servlet-name>
		<url-pattern>/tjglyServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FhServlet</servlet-name>
		<url-pattern>/fhServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TjLpServlet</servlet-name>
		<url-pattern>/tjlpServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditlpServlet</servlet-name>
		<url-pattern>/editlpServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteLpServlet</servlet-name>
		<url-pattern>/deleteLpServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/userServlet</url-pattern>
	</servlet-mapping>
  <servlet-mapping>
    <servlet-name>ScymServlet</servlet-name>
    <url-pattern>/scymServlet</url-pattern>
  </servlet-mapping>

	<!-- 400错误 请求无效 -->
	<error-page>
		<error-code>400</error-code>
		<location>/error.jsp</location>
	</error-page>
	<!-- 404 页面不存在错误 -->
	<error-page>
		<error-code>404</error-code>
		<location>/error.jsp</location>
	</error-page>
	<!-- 500 服务器内部错误 -->
	<error-page>
		<error-code>500</error-code>
		<location>/error.jsp</location>
	</error-page>
	<!-- java.lang.Exception异常错误,依据这个标记可定义多个类似错误提示 -->
	<error-page>
		<exception-type>java.lang.Exception</exception-type>
		<location>/error.jsp</location>
	</error-page>
	<!-- java.lang.NullPointerException异常错误,依据这个标记可定义多个类似错误提示 -->
	<error-page>
		<exception-type>java.lang.NullPointerException</exception-type>
		<location>/error.jsp</location>
	</error-page>
	<error-page>
		<exception-type>javax.servlet.ServletException</exception-type>
		<location>/error.jsp</location>
	</error-page>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
